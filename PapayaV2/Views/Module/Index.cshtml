@model IEnumerable<PapayaX2.Database.rs_module>


    <script type="text/javascript">
        $(document).ready(function () {
            $("#search").DefaultValue("Search");
        });
    </script>

    @{
        ViewBag.Title = ViewBag.ModuleName + " - List";
    }

    <h2>@ViewBag.ModuleName - List</h2>

    @if (TempData["Notification"] != null)
    {
        @Html.Raw(TempData["Notification"].ToString());
    }

    <div>
        <div style="float:left">
            @Html.ActionLink(" ", "Create", null, new { @class = "create", title = "Create New" })
        </div>
        <li id="searchbox">
            @using (Html.BeginForm())
            {
                <div class="searchbox">
                    @Html.TextBox("search", (string)ViewBag.search, new { id = "search" })
                    <input type="submit" value="Search" />
                </div>
            }
        </li>
        <br />
        <br />
        <br />
    </div>

    <table class="index">
        <tr>
            <th>
                Module Name
            </th>
            <th>
                Parent Module
            </th>
            <th>
                Controller
            </th>
            <th>
                Module Order
            </th>
            <th>
                Backend Module
            </th>
            <th>
                Active Module
            </th>
            <th>
                Actions
            </th>
        </tr>

        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.rs_module2.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Controller)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModuleOrder)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsBackEnd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FlagActive)
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Edit", new { id = item.ModuleId }, new { @class = "edit", title = "Edit" })
                        @Html.ActionLink(" ", "Delete", new { id = item.ModuleId }, new { @class = "delete", title = "Delete" })
                        @Html.ActionLink(" ", "Details", new { id = item.ModuleId }, new { @class = "detail", title = "Details" })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">No @ViewBag.ModuleName data found !</td>
            </tr>
        }

    </table>

