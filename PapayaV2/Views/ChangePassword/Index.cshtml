@model PapayaX2.Models.ChangePasswordModel

@{
    ViewBag.Title = "Change Password";
}

<h2>Change Password</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Change Your Password</legend>

        <br />

        @Html.Raw(ViewBag.Notification)

        <div class="editor-label">
            Old password
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.OldPassword)
            @Html.ValidationMessageFor(model => model.OldPassword)
        </div>

        <div class="editor-label">
            New password
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.NewPassword)
            @Html.ValidationMessageFor(model => model.NewPassword)
        </div>
        <div class="editor-label">
            Confirmation new password
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.ConfPassword)
            @Html.ValidationMessageFor(model => model.ConfPassword)
        </div>

        <div style="margin:20px auto">
            <input type="submit" value="Change Password" style="float:left;width:120px" />
            @Html.ActionLink("Back to Home", "Index", "Home", null, new { @class = "others", style="float:left" })
        </div>
    </fieldset>
}
