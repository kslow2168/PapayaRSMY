<body>
<!-- The drawer is always open in large screens. The header is always shown,
even in small screens. -->
<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
    <header class="header-style mdl-layout__header mdl-shadow--6dp">
        <div class="mdl-layout__header-row">
            <span class="main-header-title mdl-cell--hide-phone">
                <a href="/home">PAPAYA</a>
            </span>
            <span class="main-sub-title">@ViewBag.Title</span>
            <div class="search-wrapper mdl-cell--hide-phone mdl-cell--hide-tablet">
                @using (Html.BeginForm("Index", "Assets", FormMethod.Get, new {autocomplete = "off"}))
                {
                    <button type="submit" , value="search" class="search-button ">
                        <i class="material-icons">search</i>
                    </button>
                    @Html.TextBox("search", (string) ViewBag.search, new {Class = "search-box", id = "search", placeholder = "Papaya One Search, add \"@\" between the keywords for multi parameter search"})
                }
            </div>
            <!-- Expandable Textfield -->
            <div class="mdl-cell--hide-desktop mdl-textfield mdl-js-textfield mdl-textfield--expandable">
                <label class="mdl-button mdl-js-button mdl-button--icon" for="sample6">
                    <i class="material-icons">search</i>
                </label>
                <div class="mdl-textfield__expandable-holder">
                    <input class="mdl-textfield__input" type="text" id="sample6">
                    <label class="mdl-textfield__label" for="sample-expandable">Expandable Input</label>
                </div>
            </div>
            <div class="user-wrapper">
                <span class="user-name">
                    @User.Identity.Name
                </span>
                <button id="demo-menu-lower-right" class="mdl-button mdl-js-button user-wrapper mdl-button--icon">
                    <i class="material-icons user-icon">person</i>
                </button>
                <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect" for="demo-menu-lower-right">
                    <a href="/ChangePassword">
                        <li class="mdl-menu__item">Change Password</li>
                    </a>
                    <a href="/Home/Logout">
                        <li class="mdl-menu__item">Logout</li>
                    </a>
                </ul>
            </div>
        </div>
    </header>
    <div class="drawer-style mdl-layout__drawer mdl-shadow--2dp">
        <nav class="mdl-navigation">
            <a class="mdl-navigation__link " href="index.html">Home</a>
            <a class="mdl-navigation__link " href="asset.html">All Assets</a>
            <a class="mdl-navigation__link " href="">Systems</a>
            <a class="mdl-navigation__link " href="">Equipments</a>
            <a class="mdl-navigation__link " href="">Loan Form</a>
            <a class="mdl-navigation__link " href="profile.html">Profile</a>
            <a class="mdl-navigation__link " href="userdirectory.html">User Directory</a>
            <a class="mdl-navigation__link " href=" ">Statistics</a>
        </nav>
    </div>
    <main class="mdl-layout__content ">
        <div class="body-sidebar">
            <ul>
                <li>
                    <a href="home">Home</a>
                </li>
            </ul>
            @Html.Partial("_MenuPartial", ViewData["MenuModel"])
        </div>
        <div class="page-content">
            @RenderBody()
        </div>
    </main>
</div>

