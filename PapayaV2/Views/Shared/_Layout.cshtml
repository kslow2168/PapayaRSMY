<!--Unknown JS-->
<script type="text/javascript">
    $(document).ready(function() {
        $("table.index tr").hover(function() {
                $(this).find('td').addClass('hovered');
            },
            function() {
                $(this).find('td').removeClass('hovered');
            });

        $("#Brand").change(function() {
            var d = new Date();
            d.setMinutes(d.getMinutes() + 30);
            $.cookie('Brand', $("#Brand option:selected").val(), { expires: d, path: '/' });
            location.reload();
        });

        var systime = new Date('@DateTime.Now');
        setInterval(function() {
                var a_p = "";
                var curr_hour = systime.getHours();
                a_p = (curr_hour < 12 ? "AM" : "PM");
                curr_hour = (curr_hour == 0 ? 12 : curr_hour);
                curr_hour = (curr_hour > 12 ? curr_hour - 12 : curr_hour);
                curr_hour = (curr_hour < 10 ? "0" + curr_hour : curr_hour);
                var curr_min = systime.getMinutes();
                curr_min = (curr_min < 10 ? "0" + curr_min : curr_min);
                var curr_sec = systime.getSeconds();
                curr_sec = (curr_sec < 10 ? "0" + curr_sec : curr_sec);
                $('#systime').html(curr_hour + ":" + curr_min + ":" + curr_sec + " " + a_p);
                systime.setTime(systime.getTime() + 1000);
            },
            1000);

        $("#lightbox, #lightbox-panel").fadeIn(300);

        $("a#close-panel, a#ok-close-panel").click(function(event) {
            $("#lightbox, #lightbox-panel, #lightbox-panel-popup").fadeOut(300);
            event.preventDefault();
        });

        $("#main").css("height", "+=120px");

        if (navigator.userAgent.indexOf('MSIE 9.0') > 0) {
            $("#sliding-navigation li.sliding-element a").css("filter", "none");
            $("#sliding-navigation ul li.sliding-element a").css("filter", "none");
            $("#sliding-navigation ul ul li.sliding-element a").css("filter", "none");
            $("a.others").css("filter", "none");
            $("input[type='submit']").css("filter", "none");
            $("input[type='button']").css("filter", "none");
            $("#searchbox").css("filter", "none");
            $("#lightbox-panel, #lightbox-panel-popup").css("filter", "none");
            $("a#ok-close-panel").css("filter", "none");
            $("fieldset legend").css({
                'display': 'inline-block',
                'position': 'relative',
                'top': '-10px',
                'font-size': '1.2em',
                'font-weight': 'bold',
                'font-family': '"Trebuchet MS", Verdana, Helvetica, Sans-Serif',
                'color': '#0C3E61',
                'background': '#E1E6E8'
            });
        }
    });
    $(document).keydown(function(e) {
        // ESCAPE key pressed
        if (e.keyCode == 27) {
            $("#lightbox, #lightbox-panel, #lightbox-panel-popup").fadeOut(300);
        }
    });
    $(window).scroll(function() {
        if ($(window).scrollLeft() != 0) {
            $("#menu").css("left",
                function(index) {
                    return index - ($(window).scrollLeft() + 6);
                });
            $("#header div.wrapper").css("left",
                function(index) {
                    return index - $(window).scrollLeft();
                });
        } else {
            $("#menu").css("left", "-6px");
            $("#header div.wrapper").css("left", "0px");
        }
    });
</script>
</body>
</html>