<!DOCTYPE html>
<html>

<head>
    <title>@ViewBag.Title</title>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="@Url.Content("~/Content/login.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("https://code.getmdl.io/1.3.0/material.min.css")" rel="stylesheet" type="text/css">
    <link href="@Url.Content("https://fonts.googleapis.com/icon?family=Material+Icons")" rel="stylesheet" type="text/css">
    <link href="@Url.Content("https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en")" rel="stylesheet" type="text/css">

</head>

<body>
    <div class="centered-login">
        <h5>Rohde &amp Schwarz Malaysia</h5>
        <h3>Papaya</h3>
        <h6 class="mdl-cell--hide-phone">Manage your equipment digitally</h6>
        <div class="login-section mdl-card mdl-shadow--2dp">
            <div class="login-head mdl-shadow--2dp">
                Login with your Papaya account
            </div>
            @RenderBody()
        </div>
    </div>

    <script src="@Url.Content(" https://code.getmdl.io/1.3.0/material.min.js ")" type="text/javascript"></script>
</body>

</html>